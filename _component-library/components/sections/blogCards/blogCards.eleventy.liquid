{% if env_bookshop_live %}
    {% assign postListItems = collections.blog %}
    {% elsif tag %}
        {% assign postListItems = collections[tag] %}
    {% else %}
    {% assign postListItems = pagination.items %}
{% endif %}
{% assign color_group = styles.color_group %}

{% assign counter = 0 %}

<div class="cs-w-full py-20 h-full bg-{{styles.color_group}}-backgroundcolor flex flex-col items-center justify-center text-{{styles.color_group}}-textcolor">
    
    <div {% if content.sectionId %}id="{{ content.sectionId | idFilter }}"
    {% endif %} class="basecontainer">
        {% if env_bookshop_live %}
            
        {% endif %}
        {% if env_bookshop_live and content.showNote %}
            {% bookshop "generic/notification" heading:"Blog Cards" text:"The blog cards have place holder information. You're real information will show up on the live site. <br> I you see no blog cards its probably because you haven't added any." %}
        {% endif %}
        {% bookshop "generic/heading" bind: content.heading %}
        <div class="grid  grid-cols-1 md:grid-cols-2 lg:grid-cols-3   gap-10 md:gap-20 mt-12">
            {% for entry in postListItems %}
                {% capture blogAuthor %}
                    {% for writer in authors %}
                        {% if entry.data.author == writer.id %}
                            {{ writer.name }}
                        {% endif %}
                    {% endfor %}
                {% endcapture %}
                {% capture image %}
                    {% if entry.data.blogImage and entry.data.blogImage != ""  %}
                    image:
                        imagePath: {{ entry.data.blogImage }}
                        imageAlt: {{ entry.data.imageAltText }}
                    {% else %}
                    image:
                        imagePath: {{ blog.defaultImage }}
                        imageAlt: {{ blog.defaultImageAltText }}
                    {% endif %}
                  {% endcapture %}
                {% capture blogInfo %}
                    blogTitle: {{ entry.data.title }}
                    url: {{ entry.url }}
                    author: {{blogAuthor}}
                    date: {% if entry.data.date %} {{ entry.data.date }} {% else %} {{ entry.date }} {% endif %}
                    length: {{ entry.content | readTimeFilter }}
                    blogTags: {{ entry.data.tags | ymlify | split: "," | json}}
                    {{image}}
                    color_group: {{styles.color_group}}
                {% endcapture %}
        
                {% assign blogInfo = blogInfo | ymlify %}
                {% if entry == postListItems.first %}
                    {% bookshop "generic/blog/featured1" bind:blogInfo %}
                    {% elsif counter<21 %}
                        {% bookshop "generic/blog/card1" bind:blogInfo %}
                        {% if env_bookshop_live %}
                            {% assign counter = counter | plus: 1 %}
                        {% endif %}
                {% endif %}
        
            {% endfor %}
        </div>
    </div>
    {% if env_bookshop_live %}
        {% else %}
        {% unless tag %}
            {% bookshop "generic/blog/pagination" pagination:pagination color_group:color_group %}
        {% endunless %}
        
    {% endif %}
</div>


