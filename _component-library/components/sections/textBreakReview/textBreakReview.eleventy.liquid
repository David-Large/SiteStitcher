{% assign color_group = styles.color_group %}

<div class="c-textBreakReview c-simpleCta componentcontainer bg-{{styles.color_group}}-backgroundcolor  text-{{styles.color_group}}-textcolor">
    <section class="basecontainer w-full">
        {% bookshop "generic/heading" bind: content.heading %}
        {% if content.reviews %}
            
            <div class="flex justify-around gap-20 flex-wrap overflow-hidden mt-20 md:pr-16">
            {% for item in content.reviews %}
                {% for review in reviews %}
                    
                    {% if item.review == review.id %}
                        <div class="max-w-[350px] relative flex flex-wrap ">
                            {% assign review = review.resultImage | logFilter %}
                            {% assign imageAltText = "Service result for " | append: review.name %}
                            <div class="rounded before:cotent-[''] before:absolute before:opacity-60 before:[background-image:linear-gradient(269deg,#F2F8FD_1.01%,rgba(242,248,253,0.25)_98.69%);]">{% bookshop "generic/image" imagePath: review.resultImage imageAlt: imageAltText class: "rounded " %}</div>
                            <div class=" md:absolute top-[7%] lg:left-[170px] md:left-[125px] md:-right-[250px]">
                                <div class="flex">
                                    {% bookshop "generic/heroLibraryIcon" heroLibraryIconName:"star" iconType:"solid" iconSize:'micro' roundedBorder:false color: "#EBC644"  %}
                                    {% bookshop "generic/heroLibraryIcon" heroLibraryIconName:"star" iconType:"solid" iconSize:'micro' roundedBorder:false color: "#EBC644"  %}
                                    {% bookshop "generic/heroLibraryIcon" heroLibraryIconName:"star" iconType:"solid" iconSize:'micro' roundedBorder:false color: "#EBC644"  %}
                                    {% bookshop "generic/heroLibraryIcon" heroLibraryIconName:"star" iconType:"solid" iconSize:'micro' roundedBorder:false color: "#EBC644"  %}
                                    {% bookshop "generic/heroLibraryIcon" heroLibraryIconName:"star" iconType:"solid" iconSize:'micro' roundedBorder:false color: "#EBC644"  %}
                                </div>
                                <div class="max-w-[250px]">
                                    <div class="font-bold text-2xl">{{review.review}}</div>
                                    <div>{{review.name}}</div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </div>
        {% endif %}
        
    </section>
</div>