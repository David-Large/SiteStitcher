{% assign color_group = styles.color_group %}
{% assign counter = 0 %}

<div class="c-featuresCenterImage componentcontainer bg-{{styles.color_group}}-backgroundcolor  text-{{styles.color_group}}-textcolor">
  <section
    {% if content.sectionId %}
    id="{{ content.sectionId | idFilter }}"
    {% endif %}
    class="basecontainer w-full">
    {% bookshop "generic/heading" bind: content.heading %}
    {% if content.cards %}
        <div class="mt-20 flex justify-center gap-16">
            {% comment %} Even cards {% endcomment %}
            <div class="w-full flex flex-col gap-8">
                {% for card in content.cards %}
                    {% assign evenOdd = counter | modulo: 2 %}
                    {% if evenOdd  == 0 %}
                    {% assign color_group = styles.card_color_group %}
                    <div class="min-h-[260px] max-w-[380px] w-full {% if styles.cardBackground %} bg-{{styles.card_color_group}}-backgroundcolor shadow-md{% endif %} px-7 py-4  rounded">
                      {% capture heading %}
                        content:
                            highlightEyebrow: {{card.heading.content.highlightEyebrow}}
                            eyebrow: {{card.heading.content.eyebrow}}
                            headline: {{card.heading.content.headline}}
                            description: {{card.heading.content.description}}
                            headingHierarchy: "h3"
                            buttons:
                                {{card.heading.content.buttons | json}}
                        styles:
                            contentAlignment: {{card.heading.styles.contentAlignment}}
                            textAlignment: {{card.heading.styles.textAlignment}}
                            visualInterest: {{card.heading.styles.visualInterest}}
                            visualInterestColor: "{{card.heading.styles.visualInterestColor}}"
                    {% endcapture %}
                    {% assign heading = heading | ymlify %}
                      {% bookshop "generic/heading" bind: heading %}
                    </div>
                {% endif %}
                    {% assign counter = counter | plus: 1 %}
                  {% endfor %}

            </div>
            <div>
              {% bookshop "generic/image" bind: content.image  %}
            </div>
            {% assign counter = 0 %}
            {% assign counter = counter | plus: 1 %}
            {% comment %} Odd cards {% endcomment %}
            <div class="w-full flex flex-col gap-8">
                {% for card in content.cards %}
                  {% assign evenOdd = counter | modulo: 2 %}
                    {% if evenOdd  == 0 %}
                    {% assign color_group = styles.card_color_group %}
                    <div class="min-h-[260px] max-w-[380px] w-full {% if styles.cardBackground %} bg-{{styles.card_color_group}}-backgroundcolor shadow-md{% endif %} px-7 py-4  rounded">
                      {% capture heading %}
                        content:
                            highlightEyebrow: {{card.heading.content.highlightEyebrow}}
                            eyebrow: {{card.heading.content.eyebrow}}
                            headline: {{card.heading.content.headline}}
                            description: {{card.heading.content.description}}
                            headingHierarchy: "h3"
                            buttons:
                                {{card.heading.content.buttons | json}}
                        styles:
                            contentAlignment: {{card.heading.styles.contentAlignment}}
                            textAlignment: {{card.heading.styles.textAlignment}}
                            visualInterest: {{card.heading.styles.visualInterest}}
                            visualInterestColor: "{{card.heading.styles.visualInterestColor}}"
                    {% endcapture %}
                    {% assign heading = heading | ymlify %}
                      {% bookshop "generic/heading" bind: heading %}
                    </div>
                {% endif %}
                    {% assign counter = counter | plus: 1 %}
                  {% endfor %}

            </div>
          
          
        </div>
      {% endif %}
  </section>
</div>