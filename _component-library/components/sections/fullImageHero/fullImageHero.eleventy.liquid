<section class="cs-w-full relative flex flex-col items-center h-screen overflow-hidden">
  {% if content.image.imagePath %}
    <div class="absolute inset-0 -z-10 flex items-center justify-center after:contents[''] after:absolute after:inset-0 after:bg-black {{opacity}}">
      {% bookshop "generic/image" bind: content.image class: "h-screen w-screen object-cover" %}
    </div>
  {% endif %}


  <div class="basecontainer w-full flex flex-col h-full justify-center {% if styles.contentAlignment == 'left' %} items-start {% elsif styles.contentAlignment == 'center' %} items-center {% else %} items-end {% endif %}">
    <div class="max-w-[700px] text-white">


      <p class=" {% if content.highlightEybrow %} text-{{styles.color_group}}-accentcolor {% endif %} ">{{ content.eyebrow }}</p>
      <h1 class="md:text-5xl text-4xl font-bold">{{ content.headline }}</h1>
      <p class="mt-3">{{ content.description }}</p>
      {% if content.buttons %}
        <div class="mt-3 flex w-full gap-8 flex-wrap ">
          {% for button in content.buttons %}
            {% bookshop "generic/button" bind: button %}
          {% endfor %}

        </div>
      {% endif %}
    </div>
  </div>
</section>