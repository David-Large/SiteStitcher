{% assign color_group = styles.color_group %}
<div class="cs-w-full py-20 bg-{{styles.color_group}}-backgroundcolor flex flex-col items-center justify-center text-{{styles.color_group}}-textcolor">
    <section class="basecontainer w-full flex flex-col items-center">
        {% if content.heading or content.description %}
            <div class="">
                {% if content.heading %}{% bookshop "generic/heading" bind:content.heading %}{% endif %}
                {% if content.description %}{% bookshop "generic/textBlock" text:content.description %}{% endif %}
            </div>
        {% endif %}
            {% bookshop "simple/formBuilder" bind:content.form %}
    </section>
</div>