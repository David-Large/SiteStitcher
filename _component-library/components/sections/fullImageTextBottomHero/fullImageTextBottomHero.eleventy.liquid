{% capture opacity %}after:bg-opacity-[{{ styles.backgroundOpacity }}%]
{% endcapture %}
{% capture contentAlignment %}
{% if styles.contentAlignment == 'left' %} items-start {% elsif styles.contentAlignment == 'center' %} items-center {% else %} items-end {% endif %}
{% endcapture %}

{% capture textAlignment %}
{% if styles.textAlignment == 'left' %} text-left {% elsif styles.textAlignment == 'center' %} text-center {% else %} text-right {% endif %}
{% endcapture %}

{% capture buttonAlignment %}
{% if styles.textAlignment == 'left' %}  {% elsif styles.textAlignment == 'center' %} justify-center {% else %} justify-end {% endif %}
{% endcapture %}

<div class="c-fullImageTextBottomHero cs-w-full relative flex flex-col items-center h-screen overflow-hidden">
    {% if content.image.imagePath %}
        <div class="absolute inset-0 -z-10 flex items-center justify-center after:contents[''] after:absolute after:inset-0 after:bg-black after:bg-op {{opacity}} ">
          {% bookshop "generic/image" bind: content.image class: "h-screen w-screen object-cover" %}
        </div>
      {% endif %}
      <section class="basecontainer w-full flex flex-col h-full justify-end">
        <div class=" text-white  flex items-end">


      <div class="w-full w-max-[900px]">
          <p class=" {% if content.highlightEybrow %} text-{{styles.color_group}}-accentcolor {% endif %} ">{{ content.eyebrow }}</p>
          <h1 class="lg:text-7xl md:text-5xl text-4xl font-bold">{{ content.headline }}</h1>
      </div>
      <div class=" w-full flex flex-col items-end">
          <p class="mt-3">{% if content.description %}{% bookshop "generic/textBlock" text:content.description %}{% endif %}</p>
          {% if content.buttons %}
            <div class="mt-3 flex w-full gap-8 flex-wrap ">
              {% for button in content.buttons %}
                {% bookshop "generic/button" bind: button %}
              {% endfor %}
            </div>
          {% endif %}
      </div>
    </div>
      </section>
</div>