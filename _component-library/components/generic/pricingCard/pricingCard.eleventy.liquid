{% assign color_group = styles.card_color_group %}

<div class="c-pricingCard min-h-[400px] max-w-[390px] min-w-[250px] w-full py-7 px-6 rounded bg-{{styles.card_color_group}}-backgroundcolor text-{{styles.card_color_group}}-textcolor flex-1">
    <div>
        {% capture heading %}
            content:
                headline: {{content.heading}}
                headingHierarchy: "h3"
            styles:
                contentAlignment: left
                textAlignment: left
        {% endcapture %}
        {% assign heading = heading | ymlify %}
        {% bookshop "generic/heading" bind: heading %}
        <p class="text-sm opacity-70">{{content.shortDescription}}</p>
    </div
    >
    <div class="mt-10">
        <p class="text-3xl">{{content.price}}</p>
        <p class="opacity-70">{{content.priceDescription}}</p>
    </div>

    <div class="mt-10 border-t-2  pt-10">
        <p>
        {{content.description}}
        </p>
    </div>
</div>