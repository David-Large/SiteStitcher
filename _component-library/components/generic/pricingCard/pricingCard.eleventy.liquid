{% assign color_group = styles.card_color_group %}

<div class="c-pricingCard min-h-[400px] max-w-[390px] w-full py-7 px-6 rounded bg-{{styles.card_color_group}}-backgroundcolor">
    <div>
        {% capture heading %}
            content:
                headline: {{card.heading.content.headline}}
                headingHierarchy: "h3"
            styles:
                contentAlignment: "left"
                textAlignment: "left"
        {% endcapture %}
        {% assign heading = heading | ymlify %}
        {% bookshop "generic/heading" bind: heading %}
        <p class="text-sm opacity-70">{{content.shortDescription}}</p>
    </div
    >
    <div>
        <p class="text-3xl">{{content.price}}</p>
        <p class="opacity-70">{{content.priceDescription}}</p>
    </div>

    <div class="border-t border-2 pt-10">
        <p>
        {{description}}
        </p>
    </div>
</div>