
<div class="">
  <label class="block text-xs uppercase font-bold text-{{color_group}}-textcolor" for="{{ id }}">{{ label }}{% if required %}
      *{% endif %}
      <input
    class="block text-base appearance-none rounded font-normal w-full border-2 border-{{color_group}}-textcolor p-1 bg-{{color_group}}-backgroundcolor hover:border-{{color_group}}-accentcolor"
    type="email"
    id="{{ id }}"
    name="email"
    placeholder="{{ placeholder }}"
    {% if required %}
    required{% endif %}
    {% if helperText %}
    aria-describedby="{{ id }}--helper"
    {% endif %}>
  </label>
  

  {% if helperText %}
    <div class="mt-2">{% bookshop "generic/form/helperText" id: id helperText: helperText %}</div>
  {% endif %}
</div>