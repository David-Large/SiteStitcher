{% if pagination.href.next or pagination.href.previous %}
    <footer class="flex justify-center">
      <nav class="flex justify-between gap-4 text-{{color_group}}-accentcolor ">
        {% if pagination.href.previous %}
        <a class="hover:underline" href="{{ pagination.href.previous }}{{ paginationNumber }}"
          >{{ paginationPrevText if paginationPrevText else 'Previous'}}previous</a
        >
        {% endif %} {% if pagination.href.next %}
        <a class="hover:underline" href="{{ pagination.href.next }}{{ paginationAnchor }}">
          {{ paginationNextText if paginationNextText else 'Next' }}next
        </a>
        {% endif %}
      </nav>
    </footer>
{% endif %}