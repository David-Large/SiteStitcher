{% capture image %}
  {% if image %}
    {{image}}
    {% else %}
    image:
      imagePath: {{ blog.defaultImage }}
      imageAlt: {{ blog.defaultImageAltText }}
  {% endif %}
{% endcapture %}
{% assign image = image | ymlify %}
<div class="w-full ">
  <div class="flex justify-between text-sm opacity-70">
    <div>
      <p>Written by</p>
      <p>{{ author }}</p>
    </div>
    <div>
      <p>{{ length  }}</p>
      <time datetime="{{ date | date: "%Y-%m-%d" }}">{{ date | date: "%B %d, %Y" }}</time>
    </div>
  </div>
  <a class="" href="{{url}}">{% bookshop "generic/image" bind: image class: "rounded transition-all duration-300 scale-100 hover:scale-105"  %}</a>
  <ul class="flex text-{{color_group}}-accentcolor flex flex-wrap gap-2 overflow-hidden opacity-70">
    {% for tag in blogTags %}
      <li class="after:absolute after:content-['Â·']  after:left-2 relative before:content-[' '] after:left-[-5px] after:text-lg">
        <a
          href="/tag/{{ tag | slug }}/"
          >{{ tag | capitalize | replace: ' ', '' }}</a>
      </li>
    {% endfor %}
  </ul>
  <h2 class="hover:underline text-2xl"><a href="{{url}}">{{ blogTitle }}</a></h2>
</div>