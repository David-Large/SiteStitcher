{% capture classes %}
    {% if class %}
        {{class}}
        {% else %}
        w-full h-auto
    {% endif %}

{% endcapture %}

{% if env_bookshop_live %}
    
    <img class="{{classes}}" src="{{ imagePath }}" alt="{{ imageAlt }}">

{% elsif imagePath contains 'http://' or imagePath contains 'https://' %}
    <img class="{{classes}}" src="{{ imagePath }}" alt="{{ imageAlt }}">

{% else  %}

<img class="{{classes}}" src="{{ imagePath }}" alt="{{ imageAlt }}">
{% comment %} {% image imagePath, imageAlt, classes, imageSizes %} {% endcomment %}

    
{% endif %}