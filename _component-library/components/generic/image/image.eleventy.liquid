{% capture classes %}
    {% if class %}
        {{class}}
        {% else %}
        w-full h-auto
    {% endif %}

{% endcapture %}

{% if env_bookshop_live %}
    
    <img class="w-full" src="{{ imagePath }}" alt="{{ imageAlt }}">

{% elsif imagePath contains 'http://' or imagePath contains 'https://' %}
    <img class="w-full" src="{{ imagePath }}" alt="{{ imageAlt }}">

{% else  %}

{% comment %} <img class="w-full h-auto" src="{{ imagePath }}" alt="{{ imageAlt }}"> {% endcomment %}
{% image imagePath, imageAlt, classes, imageSizes %}

    
{% endif %}