{% if hero %}
    {% bookshop {{hero._bookshop_name}} bind:hero %}
{% elsif permalink != "/components/" %}
    {% capture default_hero %}
        content:
            headline: {{ title }}
        styles:
            contentAlignment: center
            color_group: "primary"
    {% endcapture %}
    {% assign default_hero = default_hero | ymlify %}
    {% if permalink contains "blog/" %}
        {% else %}
        {% bookshop "sections/fullImageHero" bind: default_hero %}
    {% endif %}
    
{% endif %}